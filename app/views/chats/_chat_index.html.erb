<% if @messages.present? %>
  <% @messages.each do |m| %>
    <div class="chat-box">
      <table class="table" style="table-layout:fixed;">
        <tr>
          <td style="width:30%;">
            <div class="chat-face">
              <%= attachment_image_tag m.member, :profile_image, :limit, 50, 50, class:"img-circle", fallback: "no_image.jpg", size: "100x100" %>
            </div>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
            <% if m.member == current_member %>
              <%= link_to '削除', message_path(m), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
            <% end %>
          </td>   
          <td>
            <div class="chat-hukidashi">
              <strong><%= simple_format text_url_to_link(h(m.comment)).html_safe %></strong><br>
            </div>
          </td>
        </tr>
      </table>
    </div>
  <% end %>
<% end %>
