<h2><%= current_member.nickname %></h2>

<%= render 'follow_form' if logged_in? %>

<div class="row">
    <div class="col-xs-4">


<div class="text-center">
 <div class="member-image"><%= attachment_image_tag current_member, :profile_image, :limit, 300, 300, fallback: "no_image.jpg",size: "320x320" %></div></td>
</div>
<br>
<table class="table">
<tr><th>ニックネーム</th>
    <td><div class="member-name"><%= current_member.nickname %></div></td>
</tr>
<tr>
    <th>プロフィール</th>
    <td><div class="member-profile"><%= current_member.profile %></div></td>
</tr>
<tr>
    <th></th>
    <td>
        <% @member ||= current_member %>
        <div class="follow-followed">
            <a href="<%= following_member_path(@member) %>">
                <strong id="following" class="follow-followed"><%= @member.following.count %></strong>
                フォロー
            </a>
            <a href="<%= followers_member_path(@member) %>">
                <strong id="followers" class="follow-followed"><%= @member.followers.count %></strong>
                フォローワー
            </a>
        </div>
    </td>
</tr>

</table>
<%= link_to "編集する", edit_members_path(current_member) %>
<%= link_to "パスワードを変更する", members_path(current_member) %>

</div>

<div class="col-xs-8"></div>
</div>
