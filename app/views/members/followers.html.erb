<h2>フォロワー</h2>

 <div class = "row">
   <div class="col-xs-4">

<%= render 'follow_form', member: @member %>


</div>
  
    
    
  <div class="col-xs-8">
 
      <table class="table">
       <thead>
       <tr>
        <th></th>
        <th>名前</th>
        <th>プロフィール</th>
      </tr>
      </thead>
      <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><li><%= link_to attachment_image_tag(member, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"), user_path(@user.id) %></li>
            <li>followed</li>
            <li><%=link_to member.following.count, following_member_path(member) %></li>
            <li> followers</li>
            <li><%=link_to member.followers.count, followers_member_path(member) %></li>
        </td>
        <td><%= link_to member.nickname, member_path(member) %></td>
        <td><%= member.profile %></td>
      </tr>
      
      
    <% end %>
    </tbody>
     </table>
     <ol>


     
     </ol>
  
   
  </div>
 </div>
