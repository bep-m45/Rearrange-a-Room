
<h2>
  <%= @member.nickname %>様
( <% if @member.is_deleted %>
   <span>退会済会員</span>
  <% else %>
   <span>有効会員</span>
  <% end %> )
  </h2>




<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">

<%= attachment_image_tag @member, :profile_image, :limit, 300, 300, fallback: "no_image.jpg",size: "320x320" %>


</div>

<div class="col-xs-4">

<table class="table">
  <tr>
  <th>ID</th>
  <td><%= @member.id %></td>
  </tr>
    <tr>
        <th>ニックネーム</th>
　　　　<td><%= @member.nickname%></td>
　　</tr>
　　<tr>
　　    <th>名前</th>
　　　　<td><%= @member.name %></td>
　　</tr>
　　<tr>
　　    <th>メールアドレス</th>
　　　　<td><%= @member.email %></td>
　　</tr>
　　<tr>
　　    <th>プロフィール</th>
　　    <td><%= @member.profile %></td>
　　</tr>
　　<tr>
　　     <%= form_with model: @member, url: admins_member_path(@member), local:true do |f|%>
        <th><%= f.label :会員ステータス %></th>
        <td><%= f.radio_button :is_deleted, false %> 有効　<%= f.radio_button :is_deleted, true %> 退会済み</td>
   </tr>
</table>

 <div class="text-right">
<%= f. submit '更新' %>
</div>

<% end %>
</div>

<div class="col-xs-2"></div>
</div>
