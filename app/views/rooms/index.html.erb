<h2>ROOMS</h2>
<div class="post-container">
    
<% @rooms.each do |room| %>

<div class="post-list">
  
<%= link_to member_path(room.member_id) do %>
<%= attachment_image_tag room.member, :profile_image, :limit, 300, 300, class:"img-circle", fallback: "no_image.jpg",size: "80x80" %></td>
<% end %>
<%= room.member.nickname %>
<br>
<br>
<%= link_to room_path(room.id) do %>
<%= attachment_image_tag room, :image, :limit, 300, 300, fallback: "no_image.jpg",size: "320x320" %>
<% end %>
<div id="favorites_buttons_<%= room.id %>">
             <%= render partial: 'favorites/favorite', locals: { room: room} %>
          </div>
  
  <% if room.member == current_member %>
     <%= link_to '編集', edit_room_path(room.id) %>
     <%= link_to '削除', room_path(room.id), method: :delete, data: {confirm: "Are you sure?"} %>
           
  <% end %>
  </div>
  <% end %>
  
 </div>
  
  </div>
  
