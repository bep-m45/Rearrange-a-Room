 <%= link_to "すべての投稿", rooms_path %>
		            <h4>間取り</h4>
		            <li><% room_layouts.each do |room_layout| %></li>
		          	<%= link_to room_layout.layout_name, rooms_path(room_layout_id: room_layout.id) %>
		           <% end %>
		           <h4>部屋の種類</h4>
		           <li><% room_genres.each do |room_genre| %></li>
		          	<%= link_to room_genre.genre_name, rooms_path(room_genre_id: room_genre.id) %>
		           <% end %>
		           <h4>イメージ</h4>
		           <li><% room_images.each do |room_image| %></li>
		          	<%= link_to room_image.image_name, rooms_path(room_image_id: room_image.id) %>
		           <% end %>
              <%= form_with url: search_path, method: :get, local: true do |f| %>
              
                <h4>フリーワード</h4>
                <%= f.select :range, options_for_select([['---選択してください---', ''],['USER', '1'],['ROOM', '2']]) %><br />
                <br>
                <%= f.text_field :word %>
                <br>
                <br>
                <%= f.submit "検索" %>
                
              <% end %>